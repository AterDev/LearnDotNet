@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<FluentLayout>
    <FluentHeader>
        Appear
        <FluentSpacer />
        <FluentNavLink Icon="@(new Icons.Regular.Size24.PersonAccounts())" Href="./login" OnClick='()=>JumpTo("./login")'>登录</FluentNavLink>
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="250">
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Href="./">首页</FluentNavLink>
        </FluentNavMenu>
        <FluentNavMenu Width="250">
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Href="./vote">投票</FluentNavLink>
        </FluentNavMenu>
        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter>
        Blazor
    </FluentFooter>
</FluentLayout>
<FluentMessageBarProvider Section="MESSAGES_TOP"/>
<FluentToastProvider MaxToastCount="10" />


@code {
    public void JumpTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}